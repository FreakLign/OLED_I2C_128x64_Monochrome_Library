#include <OLED_I2C_128x64_Monochrome.h>
#include <Wire.h>
// ####################################################################################################################
// ##### SETUP ########################################################################################################
// ####################################################################################################################
void setup()
{
	lcd.initialize();
}
// ####################################################################################################################
// ##### LOOP #########################################################################################################
// ####################################################################################################################
void loop()
{
	for (byte i = 0; i < 128; i++)
	{
		for (byte j = 0; j < 64; j++)
		{
			lcd.setPixel(HIGH, i, j);
			delay(5);
		}
	}
}
